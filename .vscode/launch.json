{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Simulation",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/simulation.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/",
      "justMyCode": true
    },
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Reproduce Paper",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}//main.py",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/"
      },
      "cwd": "${workspaceFolder}/",
      "justMyCode": true
    }
  ]
}